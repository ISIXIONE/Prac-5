#include <stdio.h>
#include <string.h>

int main() {
    char word[] = "Requiem";
    int start = (sizeof(word)/sizeof(word[0]))/2; // Начальная позиция
    int end = sizeof(word)/sizeof(word[0]);   // Конечная позиция
    int dif = (end - start)+1;
    char result[dif]; // Массив для результата

    int j = 0; // Index for array result
    for (int i = start; i < end; i++) {
        result[j] = word[i];
        j++;
    }
    result[j] = '\0'; // Добавляем нулевый терминатор

    printf("Result: %s\n", result);

    return 0;
}
